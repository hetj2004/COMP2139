@* specifies that this view expects a Project object *@
@model COMP2139_Labs.Areas.ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}

<h2>Edit Project</h2>

<form asp-action="Edit" method="post">
    <!-- Hidden field to ensure the ProjectId is included in the form submission
    linking the data to the correct record in the database-->
    @Html.HiddenFor(model =>model.ProjectId)

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
        
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <!-- Include other form fields here -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}