@model COMP2139_Labs.Areas.ProjectManagement.Models.ProjectTask
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Are you sure you want to delete this task?</h2>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProjectTaskId"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
</form>