@model IEnumerable<SmartInventoryManagement.Models.Product>

<h2>Inventory Management</h2>

<a class="btn btn-primary mb-3" asp-controller="Inventory" asp-action="Add">Add New Product</a>


<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>2
        <th>Quantity</th>
        <th>Low Stock Threshold</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@(product.Category?.Name ?? "Uncategorized")</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.LowStockThreshold</td>
                <td>
                    <a href="/Inventory/Edit/@product.Id" class="btn btn-warning">Edit</a>
                    <form asp-controller="Inventory" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center text-muted">No products available.</td>
        </tr>
    }
    </tbody>
</table>